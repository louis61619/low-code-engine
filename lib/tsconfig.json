{
  "compilerOptions": {
    // 打包位置
    "outDir": "dist",
    // 使用哪種模組化
    "module": "esnext",
    // bebel編譯
    "target": "es5",
    // 類型支持
    "declaration": true,
    "jsx": "react-jsx",
    // 使用node方式查找文件
    "moduleResolution": "node",
    // 支持default import
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
